  <main>
    <section class="main">
      <h2>Register</h2>
      <form action="/register" method="post" id="signInForm" class="info">
        <input required type="text" name="firstname" id="firstname" placeholder="Firstname">
        <input required type="text" name="lastname" id="lastname" placeholder="Lastname">
        <input required type="email" name="email" id="email" placeholder="Email">

        <% if (typeof emailError !== 'undefined') { %>
          <p class="error"><i class="fa-solid fa-triangle-exclamation"></i><%= emailError %>!</p>
        <% } %>


        <div class="wrap" id="wrap1">
          <input required type="password" name="password1" id="password1" placeholder="Create Password">
          <i class="fa-solid fa-eye" id="eye1"></i>
        </div>
        <div class="wrap" id="wrap2">
          <input required type="password" name="password2" id="password2" placeholder="Confirm Password">
          <i class="fa-solid fa-eye" id="eye2"></i>
        </div>
        <div id="unmatch">
          <i class="fa-solid fa-triangle-exclamation"></i> Password do not match
        </div>

        <div class="pvp">
          <p id="terms">
            <input type="checkbox" style="width: 15px;" required>
            <span class="sent">
              I accept the&nbsp; 
              <a href="" style="white-space: nowrap;">terms and conditions</a>&nbsp;of use and
              <a href="" style="white-space: nowrap;">privacy policy</a>
            </span>
          </p>
        </div>
        <button type="submit" class="sign_in">Sign Up</button>

        <div id="error-msg"></div>
      </form>
      <p class="outside" style="color: var(--FCOLOR);">Already have an account?<a href="/login">Login</a>.</p>
    </section>
  </main>

