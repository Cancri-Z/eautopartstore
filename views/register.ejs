          <p><a href="" class="legal_pg">Cookie Policy</a></p>
          <p><a href="" class="legal_pg">Copyright Infringement Policy</a></p>  
        </div>
      </div> 
      <div class="ftft">
        <p><em>@2024 e-autopartstore</em></p>
      </div>
  </footer>

<script>

  
  document.addEventListener("DOMContentLoaded", function() {
      const togglePassword = document.getElementById('eye1');
      const passwordField = document.getElementById('password1');
      
      togglePassword.addEventListener('click', function() {
          const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
          passwordField.setAttribute('type', type);
          togglePassword.classList.toggle('fa-eye');
          togglePassword.classList.toggle('fa-eye-slash');
      });
  });

  document.addEventListener("DOMContentLoaded", function() {
      const togglePassword = document.getElementById('eye2');
      const passwordField = document.getElementById('password2');
      
      togglePassword.addEventListener('click', function() {
          const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
          passwordField.setAttribute('type', type);
          togglePassword.classList.toggle('fa-eye');
          togglePassword.classList.toggle('fa-eye-slash');
      });
  });




  document.addEventListener("DOMContentLoaded", function() {
    const passwordField = document.getElementById('password1');
    
    passwordField.addEventListener('input', function() {
        const password = passwordField.value;

        const containsNumber = /\d/.test(password);
        const containsLetter = /[a-zA-Z]/.test(password);
        const isLongEnough = password.length >= 8;

        if (containsNumber && containsLetter && isLongEnough) {
            // Password meets all criteria
            passwordField.setCustomValidity('');
        } else {
            // Password doesn't meet all criteria
            passwordField.setCustomValidity('Password must contain at least one number, one letter, and be at least 8 characters long.');
        }
    });
});




document.addEventListener("DOMContentLoaded", function() {
  const unmatchDiv = document.getElementById('unmatch');
  
  document.getElementById("signInForm").addEventListener("submit", function(event) {
    let password1 = document.getElementById("password1").value;
    let password2 = document.getElementById("password2").value;

    if (password1 !== password2) {
      unmatchDiv.style.display = 'block'; // Show the div
      event.preventDefault(); // Prevent form submission
    } else {
      unmatchDiv.style.display = 'none'; // Hide the div if passwords match
    }
  });
});



</script>

</body>
