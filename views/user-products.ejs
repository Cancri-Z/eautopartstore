<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.bizname || user.firstname %> | e-autopartstore</title>
    <link rel="stylesheet" href="/public/css_folder/partial_styles/root_styles.css">
    <link rel="stylesheet" href="/css_folder/user-products.css">
    <link rel="icon" href="/icon_images/Logo_2 - Copy.png" type="image/x-icon" sizes="32x32" >
    <link rel="stylesheet" href="/css_folder/partial_styles/basics.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <div class="header-content">
            
            <!-- Company Logo -->
            <a href="/" class="logo">
                <img src="/public/icon_images/Logo_2.png" alt="Company Logo">
            </a>
            <!-- Home Icon -->
            <a href="/" class="home-icon">
                <i class="fas fa-home"></i>
            </a>
    
        </div>
    </header>
    

    <main>
        <div class="user-info">
            <h1 id="user-products-title"><%= user.bizname || user.firstname + "'s Shop" %></h1>
            <p>Seller: <%= user.firstname %> <%= user.lastname %></p>
            <% if (user.location) { %>
                <p>Location: <%= user.location %></p>
            <% } %>
        </div>

        <% if (products.length > 0) { %>
            <div class="userProducts">
                <% products.forEach(product => { %>
                    <a href="/product/<%= product.productId %>" class="pd_cd">
                        <div class="product-card">
                            <img src="<%= product.photos[0] ? product.photos[0] : '/default-image.jpg' %>" alt="<%= product.name %>">
                            <article>
                                <h3 class="product-name"><%= product.name %></h3>
                                <p class="product-description"><%= product.description %></p>
                                <p class="price">
                                    <span class="priceDiv">â‚¦ <%= formatNumber(product.price) %></span>
                                </p>
                                <div class="product-info">
                                    <p class="product-condition"><%= product.condition %></p>
                                    <p class="product-location"><i class="fas fa-map-marker-alt"></i> <%= product.location %></p>
                                </div>
                            </article>
                        </div>
                        
                    </a>
                <% }) %>
            </div>
        <% } else { %>
            <div class="no-products">
                <p>This seller hasn't posted any products yet.</p>
            </div>
        <% } %>
    </main>
</body>
</html>