                    <option value="body" <%= product && product.category === 'body' ? 'selected' : '' %>>Body Parts</option>
                    <option value="suspension" <%= product && product.category === 'suspension' ? 'selected' : '' %>>Suspension and Steering</option>
                    <option value="braking" <%= product && product.category === 'braking' ? 'selected' : '' %>>Braking System</option>
                    <option value="transmission" <%= product && product.category === 'transmission' ? 'selected' : '' %>>Transmission and Drivetrain</option>
                    <option value="exhaust" <%= product && product.category === 'exhaust' ? 'selected' : '' %>>Exhaust System</option>
                    <option value="fuel" <%= product && product.category === 'fuel' ? 'selected' : '' %>>Fuel System</option>
                    <option value="cooling" <%= product && product.category === 'cooling' ? 'selected' : '' %>>Cooling System</option>
                    <option value="climate" <%= product && product.category === 'climate' ? 'selected' : '' %>>Climate Control (HVAC)</option>
                    <option value="interior" <%= product && product.category === 'interior' ? 'selected' : '' %>>Interior Parts</option> 
                    <option value="lighting" <%= product && product.category === 'lighting' ? 'selected' : '' %>>Lighting</option>
                    <option value="tires" <%= product && product.category === 'tires' ? 'selected' : '' %>>Tires and Wheels</option>
                    <option value="fluids" <%= product && product.category === 'fluids' ? 'selected' : '' %>>Fluids and Lubricants</option>
                    <option value="performance" <%= product && product.category === 'performance' ? 'selected' : '' %>>Performance Parts</option>
                    <option value="accessories" <%= product && product.category === 'accessories' ? 'selected' : '' %>>Accessories and Add-ons</option>
                    <option value="tools" <%= product && product.category === 'tools' ? 'selected' : '' %>>Tools and Equipment</option>
                </select>
              </div>

              <div id="typ-con">
                <legend class="levit">Type</legend>
                  <select name="type" id="type" data-pre-fill="<%= product ? product.type : '' %>" required>
                    <option value="select type" disabled selected>Select a type</option>
                  </select>
              </div>

              <div class="note-b">
                NB: Selecting brands, models or year is not required for every category or type.
              </div>

              <fieldset>
                <legend>Brand</legend>
                <select id="brand" name="brand" onchange="updateModels()">
                  <option disabled selected value="Select your brand" class="style">Select your brand</option>
                  <option value="Audi" <%= product && product.brand === 'Audi' ? 'selected' : '' %>>Audi</option>
                  <option value="Chevrolet" <%= product && product.brand === 'Chevrolet' ? 'selected' : '' %>>Chevrolet</option>
                  <option value="Ford" <%= product && product.brand === 'Ford' ? 'selected' : '' %>>Ford</option>
                  <option value="Honda" <%= product && product.brand === 'Honda' ? 'selected' : '' %>>Honda</option>
                  <option value="Lexus" <%= product && product.brand === 'Lexus' ? 'selected' : '' %>>Lexus</option>
