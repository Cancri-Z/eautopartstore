                </select>
              </fieldset>

              <fieldset>
                <legend>Model</legend>
                <select id="model" name="model" data-pre-fill="<%= product ? product.model : '' %>">
                  <option disabled selected value="Model" class="style">Model</option>
                  <!-- other options would be dynamically selected using JS -->
                </select>
              </fieldset>

              <fieldset id="stuff">
                  <legend>Year</legend>
                  <div class="yrcnt">
                    <!-- Default Year Option Radio Buttons -->
                    <label class="tyr">
                      <div>
                        <input type="radio" name="yearOption" value="single" id="singleYearOption" 
                        <%= product && product.yearOption === 'single' ? 'checked' : '' %>>
                        <span>Single Year</span>
                      </div>
                    </label>
                    <label class="tyr">
                      <div>
                        <input type="radio" name="yearOption" value="interval" id="intervalYearOption" 
                        <%= product && product.yearOption === 'interval' ? 'checked' : '' %>>
                        <span>Year Interval</span>
                      </div>
                    </label>
                  </div>
              
                  <!-- Single Year Div -->
                  <div id="singleYearDiv" style="display: <%= product && product.yearOption === 'single' ? 'block' : 'none' %>;">
                    <select id="year" name="year">
                      <option disabled selected value="" class="style">Select Year</option>
                      <% for (let year = currentYear; year >= startYear; year--) { %>
                        <option value="<%= year %>" <%= product && year === product.year ? 'selected' : '' %>><%= year %></option>
                      <% } %>
                    </select>
                  </div>
              
                  <!-- Interval Year Div -->
                  <div id="intervalYearDiv" style="display: <%= product && product.yearOption === 'interval' ? 'block' : 'none' %>;">
                    <select id="startYear" name="startYear">
                      <option disabled selected value="" class="style">Start Year</option>
                      <% for (let year = currentYear; year >= startYear; year--) { %>
                        <option value="<%= year %>" <%= product && year === product.startYear ? 'selected' : '' %>><%= year %></option>
                      <% } %>
                    </select>
                    <select id="endYear" name="endYear">
                      <option disabled selected value="" class="style">End Year</option>
                      <% for (let year = currentYear; year >= startYear; year--) { %>
                        <option value="<%= year %>" <%= product && year === product.endYear ? 'selected' : '' %>><%= year %></option>
                      <% } %>
                    </select>
                  </div>
              </fieldset>
            
